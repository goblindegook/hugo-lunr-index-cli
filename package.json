{
  "name": "hugo-lunr-index-cli",
  "version": "1.0.0",
  "description": "Generates Lunr search indices for a Hugo static site.",
  "main": "dist/index.js",
  "author": "Lu√≠s Rodrigues",
  "license": "MIT",
  "scripts": {
    "prepublish": "npm test && npm run build",
    "pretest": "tslint {src,test}/**/*.ts",
    "build": "tsc",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  },
  "dependencies": {
    "date-fns": "^1.28.5",
    "glob": "^7.1.2",
    "js-yaml": "^3.9.1",
    "marked": "^0.3.6",
    "string": "^3.3.3",
    "toml": "^2.3.2",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "@types/date-fns": "^2.6.0",
    "@types/glob": "^5.0.30",
    "@types/jest": "^20.0.6",
    "@types/js-yaml": "^3.9.0",
    "@types/marked": "^0.3.0",
    "@types/node": "^8.0.19",
    "@types/string": "^0.0.28",
    "@types/yargs": "^8.0.2",
    "jest": "^20.0.4",
    "ts-jest": "^20.0.10",
    "tslint": "^5.5.0",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^2.4.2"
  }
}
