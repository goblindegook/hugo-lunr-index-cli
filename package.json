{
  "name": "hugo-lunr-index-cli",
  "version": "0.9.2",
  "description": "Generate Lunr search indices for a Hugo static site.",
  "license": "MIT",
  "author": {
    "name": "LuÃ­s Rodrigues",
    "email": "hello@goblindegook.com",
    "url": "https://goblindegook.com"
  },
  "repository": {
    "url": "https://github.com/goblindegook/hugo-lunr-index-cli"
  },
  "bin": {
    "hugo-lunr-index": "dist/index.js"
  },
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "tslint {src,test}/**/*.ts",
    "prepublish": "npm test && npm run build",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "keywords": [
    "hugo",
    "indexer",
    "lunr",
    "search",
    "site",
    "static"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  },
  "dependencies": {
    "date-fns": "^1.28.5",
    "glob": "^7.1.2",
    "js-yaml": "^3.9.1",
    "marked": "^0.3.6",
    "string": "^3.3.3",
    "toml": "^2.3.2",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "@types/date-fns": "^2.6.0",
    "@types/execa": "^0.7.0",
    "@types/glob": "^5.0.30",
    "@types/jest": "^20.0.6",
    "@types/js-yaml": "^3.9.0",
    "@types/marked": "^0.3.0",
    "@types/mkdirp": "^0.5.0",
    "@types/node": "^8.0.19",
    "@types/string": "^0.0.28",
    "@types/yargs": "^8.0.2",
    "execa": "^0.8.0",
    "jest": "^20.0.4",
    "mkdirp": "^0.5.1",
    "ts-jest": "^20.0.10",
    "ts-node": "^3.3.0",
    "tslint": "^5.5.0",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^2.4.2"
  }
}
